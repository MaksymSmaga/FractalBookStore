@using FractalBookStore
@model Book

@{
    ViewData["Title"] = Model.Title;
}
<br />
<img  src="@Model.Image" width="400" align="right" alt="Book Photo">

<div class="text-light">

<h4>@Model.Title</h4>
<p><strong>Author:</strong>  @Model.Author</p>

<br /><p><strong>Description:</strong>  @Model.Description</p>
<p><strong>Price: @Model.Price.ToString("C")</strong></p>

 
 Status:
@if (@Model.Available)
{
    <p>Available</p>
}
else
{
    <p>Not Available</p>
}
 
<p>Price: @Model.Price.ToString("C") </p>
                 Shipping:
@if (@Model.Shipping > 0)
{
    <p>@Model.Shipping.ToString("C")</p>
}
else
{
    <p>Free</p>
}

 
 Discount:
@if (@Model.Discount > 0.0m)
{
    <p> @Model.Discount.ToString("G4")%</p>
}
else
{
    <p>None</p>
}
<p><b>Total Price: @Model.TotalPrice.ToString("C")</b></p>

 </div>
<form action="@Url.Action("AddItem","Order")" method="post">
    <input type="hidden" name="bookid" value="@Model.Id" />
    <input type="hidden" name="count" value="1" />
    <button class=" btn btn-success" type="submit">Add into your Cart</button>
</form>