<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Store of Fractal Books</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Store of Fractal Books</a>
            <form class="form-inline my-2 my-lg-0" action="@Url.Action("Index","Search")" method="get">
                <input class="form-control mr-sm-2" type="search" name="query" placeholder="Fractal in Author or Title" />
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
            <span class="navbar-text ml-auto">
                @{

                    @if (Context.Session.TryGetCart(out Cart cart) && cart.TotalCount > 0)
                    {
                        <a href="@Url.Action("Index","Order")"> @cart.TotalCount books - Amount: @cart.TotalPrice$</a>
                    }

                    else
                    {
                        @:Your cart is empty
                    }

                }
            </span>
        </nav>
    </header>
    <div class="container">
        <main>
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Store of Fractal Books
            <span align=”right” id="timer"></span>

            <script>
                var timerVar = setInterval(serverTimer, 1000);

                function serverTimer() {
                    var d = new Date();
                    document.getElementById("timer").innerHTML = d.toLocaleTimeString();
                }
            </script>

        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
